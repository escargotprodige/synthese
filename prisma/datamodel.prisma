type User {
  id: ID! @id
  name: String!
}

enum Rarity {
  COMMON
  UNCOMMON
  RARE
  VERY_RARE
  LEGENDARY
}

type Brand {
  id: ID! @id
  name: String!
  weapons: [WeaponBase] @relation(link: INLINE)
  weaponParts: [WeaponPart] @relation(link: INLINE)
}

enum WeaponType {
  PISTOL
  SHOTGUN
  ASSAULT_RIFLE
  SNIPER
  ROCKET_LAUNCHER
  SMG
}

enum WeaponPartType {
  BODY
  BARREL
  ACCESSORY
  SIGHT
  GRIP
  STOCK
}

enum ModifierType {
  SCALE
  PRE_ADD
}

type Attribute @embedded {
  name: String!
  value: Float
}

type WeaponBase {
  id: ID! @id
  rarity: Rarity
  brand: Brand
  type: WeaponType
  attributes: [Attribute!]
}

type WeaponPart {
  id: ID! @id
  effects: [Effect!]
  prefixes: [NameByBrand!] @relation(name: "Prefixes")
  titles: [NameByBrand!] @relation(name: "Titles")
  brand: Brand
  weaponType: WeaponType
  partType: WeaponPartType
}

type NameByBrand @embedded {
  name: String!
  brand: Brand
}

type Effect @embedded {
  AttributeToModify: Attribute @relation(name: "AttributeToModify")
  modifierType: ModifierType
  baseValueConstant: Float
  baseValueAttribute: Attribute @relation(name: "BaseValueAttribute")
  baseValueScaleConstant: Float
}